{
  "name": "bem-flex-grid",
  "version": "0.0.1",
  "description": "CSS flex grid, BEM compliant",
  "main": "index.js",
  "scripts": {
    "md-to-html": "node md-to-html.js",
    "md-to-html:watch": "node md-to-html.js watch",
    "start": "parcel src/index.html --open",
    "css": "node-sass src/bem-flex-grid.scss > build/bem-flex-grid.css",
    "css:ie11": "node-sass src/bem-flex-grid.ie11.scss > build/bem-flex-grid.ie11.css",
    "css:min": "node-sass --output-style compressed src/bem-flex-grid.scss > build/bem-flex-grid.min.css",
    "css:min:ie11": "node-sass --output-style compressed src/bem-flex-grid.ie11.scss > build/bem-flex-grid.ie11.min.css",
    "build": "npm run css && npm run css:min && npm run css:ie11 && npm run css:min:ie11",
    "all": "npm run md-to-html && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avine/bem-flex-grid.git"
  },
  "keywords": [
    "css3",
    "flexbox",
    "bem",
    "sass",
    "dashboard",
    "grid",
    "layout",
    "responsive"
  ],
  "author": "St√©phane Francel <contact@avine.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/avine/bem-flex-grid/issues"
  },
  "homepage": "https://github.com/avine/bem-flex-grid#readme",
  "devDependencies": {
    "@types/markdown-it": "0.0.5",
    "@types/prismjs": "^1.9.0",
    "markdown-it": "^8.4.2",
    "node-sass": "^4.9.3",
    "parcel-bundler": "^1.9.7",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "primer-markdown": "^3.7.9",
    "prismjs": "^1.15.0"
  }
}
