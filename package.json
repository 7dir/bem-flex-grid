{
  "name": "bem-flex-grid",
  "version": "1.2.2",
  "description": "CSS flex grid, BEM compliant.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf src/index.html dist .cache output docs deploy && mkdirp dist",
    "index": "node index",
    "index:watch": "node index watch",
    "prestart": "rimraf output && npm run index",
    "start": "parcel serve src/index.html --out-dir output",
    "predocs": "rimraf docs && npm run index",
    "docs": "parcel build src/index.html --out-dir docs --public-url /bem-flex-grid/ --no-minify",
    "css": "node-sass src/lib/bem-flex-grid.scss > dist/bem-flex-grid.css",
    "css:ie11": "node-sass src/lib/bem-flex-grid.ie11.scss > dist/bem-flex-grid.ie11.css",
    "css:min": "node-sass --output-style compressed src/lib/bem-flex-grid.scss > dist/bem-flex-grid.min.css",
    "css:min:ie11": "node-sass --output-style compressed src/lib/bem-flex-grid.ie11.scss > dist/bem-flex-grid.ie11.min.css",
    "build": "npm run css && npm run css:min && npm run css:ie11 && npm run css:min:ie11",
    "all": "npm run clean && npm run docs && npm run build",
    "deploy": "npm run build && node deploy.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avine/bem-flex-grid.git"
  },
  "keywords": [
    "css3",
    "flexbox",
    "bem",
    "sass",
    "dashboard",
    "grid",
    "layout",
    "responsive"
  ],
  "author": "St√©phane Francel <contact@avine.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/avine/bem-flex-grid/issues"
  },
  "homepage": "https://avine.github.io/bem-flex-grid",
  "devDependencies": {
    "@types/highcharts": "^5.0.33",
    "@types/markdown-it": "0.0.7",
    "@types/prismjs": "^1.9.0",
    "fs-extra": "^7.0.0",
    "highcharts": "^6.2.0",
    "markdown-it": "^8.4.2",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.10.0",
    "parcel-bundler": "^1.10.3",
    "primer-markdown": "^3.7.10",
    "prismjs": "^1.15.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  }
}
