{
  "name": "bem-flex-grid",
  "version": "1.0.1",
  "description": "CSS flex grid, BEM compliant.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf src/index.html dist .cache output www deploy && mkdirp dist",
    "doc": "node doc.js",
    "doc:watch": "node doc.js watch",
    "prestart": "rimraf output && npm run doc",
    "start": "parcel serve src/index.html --out-dir output",
    "prewww": "rimraf www && npm run doc",
    "www": "parcel build src/index.html --out-dir www --no-minify",
    "prewww:public": "rimraf www && npm run doc",
    "www:public": "parcel build src/index.html --out-dir www/bem-flex-grid --no-minify --public-url /bem-flex-grid/",
    "serve": "http-server ./www",
    "css": "node-sass src/lib/bem-flex-grid.scss > dist/bem-flex-grid.css",
    "css:ie11": "node-sass src/lib/bem-flex-grid.ie11.scss > dist/bem-flex-grid.ie11.css",
    "css:min": "node-sass --output-style compressed src/lib/bem-flex-grid.scss > dist/bem-flex-grid.min.css",
    "css:min:ie11": "node-sass --output-style compressed src/lib/bem-flex-grid.ie11.scss > dist/bem-flex-grid.ie11.min.css",
    "build": "npm run css && npm run css:min && npm run css:ie11 && npm run css:min:ie11",
    "all": "npm run clean && npm run doc && npm run build",
    "deploy": "npm run build && node deploy.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avine/bem-flex-grid.git"
  },
  "keywords": [
    "css3",
    "flexbox",
    "bem",
    "sass",
    "dashboard",
    "grid",
    "layout",
    "responsive"
  ],
  "author": "St√©phane Francel <contact@avine.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/avine/bem-flex-grid/issues"
  },
  "homepage": "https://avine.io/bem-flex-grid",
  "devDependencies": {
    "@types/highcharts": "^5.0.31",
    "@types/markdown-it": "0.0.6",
    "@types/prismjs": "^1.9.0",
    "fs-extra": "^7.0.0",
    "highcharts": "^6.2.0",
    "http-server": "^0.11.1",
    "markdown-it": "^8.4.2",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.4",
    "parcel-bundler": "^1.10.3",
    "primer-markdown": "^3.7.9",
    "prismjs": "^1.15.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  }
}
